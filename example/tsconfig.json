{
    "compilerOptions": {
      "module": "commonjs",
      "target": "es5",
      "outDir": "build",
      "sourceMap": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "moduleResolution": "node",
       "types": [
         "core-js",
         "node"
       ]
    },
    "include": [
        "**/*.ts",
        "../src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ],
    "compileOnSave": false,
    "buildOnSave": false,
    "atom": {
        "rewriteTsconfig": false
    }
}
